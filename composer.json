{
    "name": "kiosk/support",
    "description": "Kiosk Support is a Laravel package for core support features.",
    "keywords": [
        "laravel",
        "kiosk",
        "support"
    ],
    "homepage": "https://github.com/getkiosk/support",
    "license": "MIT",
    "authors": [
        {
            "name": "Evgenii Nasyrov",
            "email": "inasyrov@ya.ru",
            "homepage": "https://github.com/nasyrov",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "laravel/framework": "^8.0",
        "spatie/laravel-package-tools": "^1.9",
        "spatie/laravel-sluggable": "^2.6"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.7"
    },
    "autoload": {
        "psr-4": {
            "Kiosk\\Support\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kiosk\\Support\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "phpcs",
        "analyse": "psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Kiosk\\Support\\SupportServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
